             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Problem.MainPage">

    <StackLayout Padding="40">
        <Button
            HorizontalOptions="Center"
            ContentLayout="Left, 90"
            CharacterSpacing="0"
            ImageSource="icon.png"
            Text="text"
            />
        <Button
            HorizontalOptions="Center"
            ContentLayout="Left, 90"
            CharacterSpacing="1"
            ImageSource="icon.png"
            Text="text"
        />
        <Button
